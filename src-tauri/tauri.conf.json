{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ranked-rps",
  "version": "0.1.0",
  "identifier": "com.ranked-rps.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ranked RPS",
        "width": 800,
        "height": 600,
        "devtools": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/rps.png",
      "title": "Ranked RPS"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/rps.png"
    ]
  }
}
